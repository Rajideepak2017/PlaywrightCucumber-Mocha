{
  "name": "cucumber_playwright",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "MochaTests":"npx playwright test tests/test.spec.js ",
    "MochaDebug": "npx playwright test --debug",
    "MochaHeadedRun" : "npx playwright test --headed",
    "TagRunMocha": "npx playwright test --grep ' @web'",
    "RunallFeatures": "npx cucumber-js \"features/*.feature\"  --format html:Cucumber-report.html",
    "RunbyTag": "npx cucumber-js \"features/*.feature\" --tags \"@web\" --format html:Cucumber-report.html",
     "PretestStoragestate": "node generateauth.js && npx cucumber-js \"features/*.feature\" --tags \"@web\" --format html:Cucumber-report.html"
  },
